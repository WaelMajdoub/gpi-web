{% extends "IMIECoreBundle:index.html.twig" %}

{% block title %}
    Peripherique - {{ parent() }}
{% endblock %}

{% block title_table %}
    {{ parent() }}Peripheriques divers
{% endblock %}


{% block filtres_table %}

<nav class="navbar navbar-inverse">
    <div class="container-fluid">  
        <ul class="nav navbar-nav">
            <li class="active"><a href="#">Filtre</a></li>
                <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">type <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        {% set typeList = [] %}
                        {% for peripherique in listPeripherique %}
                            {% if peripherique.typeMateriel.type not in typeList %}
                                {% set typeList = typeList|merge([peripherique.typeMateriel.type]) %}
                            {% endif %}
                        {% endfor %}
                        {% for type in typeList %}
                            <li>
                            <a href="#">   
                                <input class="checkinput" type="checkbox" name="manufacturerId"  id="{{ type }}" value="38" checked="checked" label for="manufacturerId-38"></input>
                                <label class="materiel_filtre">{{ type }}</label>
                            </a>
                            </li>
                        {% endfor %}
                    </ul>
                </li>


            <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Marque <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    {% set constructeurList = [] %}
                    {% for peripherique in listPeripherique %}
                    {% if peripherique.typeMateriel.constructeur.nom not in constructeurList %}
                    {% set constructeurList = constructeurList|merge([peripherique.typeMateriel.constructeur.nom]) %}
                    {% endif %}
                    {% endfor %}
                    {% for constructeur in constructeurList %}
                        <li>
                        <a href="#"> 
                            <input class="checkinput" type="checkbox" name="manufacturerId"  id="{{constructeur}}" value="38" checked="checked" label for="manufacturerId-38"></input>
                            <label class="materiel_filtre">{{constructeur}}</label>
                        </a>
                        </li>
                    {% endfor %}
                </ul>
            </li>



            <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Model <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    {% set modelList = [] %}
                    {% for peripherique in listPeripherique %}
                        {% if peripherique.typeMateriel.nom not in modelList %}
                            {% set modelList = modelList|merge([peripherique.typeMateriel.nom]) %}
                        {% endif %}
                    {% endfor %}
                    {% for model in modelList %}
                        <li>
                        <a href="#">     
                            <input class="checkinput" type="checkbox" name="manufacturerId"  id="{{ model }}" value="38" checked="checked" label for="manufacturerId-38"></input>
                            <label class="materiel_filtre">{{ model }}</label>
                        </a>
                        </li>
                    {% endfor %}
                </ul>
            </li>



            <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Salle <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    {% set salleList = [] %}
                    {% for peripherique in listPeripherique %}
                        {% if peripherique.salle.nom not in salleList %}
                            {% set salleList = salleList|merge([peripherique.salle.nom]) %}
                        {% endif %}
                    {% endfor %}
                    {% for salle in salleList %}
                        <li>
                        <a href="#"> 
                            <input class="checkinput" type="checkbox" name="manufacturerId"  id="{{ salle }}" value="38" checked="checked" label for="manufacturerId-38"></input>
                            <label class="materiel_filtre">{{ salle }}</label>
                        </a>
                        </li>
                    {% endfor %}
                </ul>
            </li>    
        </ul>
    </div>
</nav>


